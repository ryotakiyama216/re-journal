      setEntries(updated);
    }
    setIsWriting(false);
  };

  return (
    <div className="min-h-screen bg-[#FDFCFB] font-sans text-stone-900 selection:bg-stone-100 relative overflow-hidden">
      {/* 全画面共通のアンビエント背景 */}
